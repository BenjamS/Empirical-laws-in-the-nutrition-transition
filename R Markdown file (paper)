mod <- lm(`Food expenditure share of GDP, logged` ~ `GDP / capita (USD), logged`, df_plot)
#summary(mod)
m <- round(mod$coefficients[2], 2)
b <- round(mod$coefficients[1], 2)

labelThese_vec <- c("Tanzania", "Uganda", "Kenya", "Ethiopia",
                    "India", "South Africa", "Iran",
